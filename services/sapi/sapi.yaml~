apiVersion: v1
kind: Deployment
metadata:
  name: sapi
  labels:
    app: sapi
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sapi
  template:
    metadata:
      labels:
        app: sapi
    spec:
      containers:
      - name: sapi
        image: vphoikka/demo-repo:demo
      imagePullSecrets:
      - name: regcred
___

apiVersion: v1
kind: service
metadata:
  name: sapi-service
spec
  type: NodePort
  selector:
    app: sapi
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
      NodePort: 30000
